@page "/GRC/ThirdPartyAssessments"
@using System.Net.Http.Json
@using EBSCore.Web.Models.GRC
@inject HttpClient Http

<h3>@Localizer["ThirdPartyAssessments"]</h3>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="CreateNew">@Localizer["AddNew"]</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["ThirdPartyID"]</th>
            <th>@Localizer["AssessmentType"]</th>
            <th>@Localizer["DateOfAssessment"]</th>
            <th>@Localizer["OverallRiskRating"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (assessments is null)
        {
            <tr><td colspan="5">@Localizer["Loading"]</td></tr>
        }
        else if (!assessments.Any())
        {
            <tr><td colspan="5">@Localizer["NoData"]</td></tr>
        }
        else
        {
            @foreach (var assessment in assessments)
            {
                <tr>
                    <td>@assessment.ThirdPartyID</td>
                    <td>@assessment.AssessmentType</td>
                    <td>@assessment.DateOfAssessment?.ToString("yyyy-MM-dd")</td>
                    <td>@assessment.OverallRiskRating</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => Edit(assessment.AssessmentID)">@Localizer["Edit"]</button>
                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => Delete(assessment.AssessmentID)">@Localizer["Delete"]</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (editing != null)
{
    <div class="card mt-4">
        <div class="card-header">@Localizer[editing.AssessmentID.HasValue ? "EditAssessment" : "AddAssessment"]</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ThirdPartyID"]</label>
                    <input type="number" class="form-control" @bind="editing.ThirdPartyID" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["AssessmentType"]</label>
                    <input class="form-control" @bind="editing.AssessmentType" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["DateOfAssessment"]</label>
                    <input type="date" class="form-control" @bind-value="editing.DateOfAssessment" @bind-value:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["AreasAssessed"]</label>
                    <textarea class="form-control" @bind="editing.AreasAssessed"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["QuestionnaireScore"]</label>
                    <input class="form-control" @bind="editing.QuestionnaireScore" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["OverallRiskRating"]</label>
                    <input class="form-control" @bind="editing.OverallRiskRating" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["FindingsIssues"]</label>
                    <textarea class="form-control" @bind="editing.FindingsIssues"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RequiredMitigations"]</label>
                    <textarea class="form-control" @bind="editing.RequiredMitigations"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ResidualRiskRating"]</label>
                    <input class="form-control" @bind="editing.ResidualRiskRating" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ApprovedForOnboarding"]</label>
                    <input type="checkbox" class="form-check-input" @bind="editing.ApprovedForOnboarding" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["NextAssessmentDue"]</label>
                    <input type="date" class="form-control" @bind-value="editing.NextAssessmentDue" @bind-value:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["AssessedBy"]</label>
                    <input class="form-control" @bind="editing.AssessedBy" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Notes"]</label>
                    <textarea class="form-control" @bind="editing.Notes"></textarea>
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
                <button class="btn btn-secondary ms-2" @onclick="Cancel">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject] public Microsoft.Extensions.Localization.IStringLocalizer<ThirdPartyAssessments> Localizer { get; set; }

    private List<ThirdPartyAssessment> assessments;
    private ThirdPartyAssessment editing;

    protected override async Task OnInitializedAsync()
    {
        await LoadAssessments();
    }

    private async Task LoadAssessments()
    {
        var response = await Http.GetAsync("/api/ThirdPartyAssessment/Get");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            assessments = System.Text.Json.JsonSerializer.Deserialize<List<ThirdPartyAssessment>>(json);
        }
    }

    private void CreateNew()
    {
        editing = new ThirdPartyAssessment();
    }

    private async Task Edit(int? id)
    {
        if (!id.HasValue) return;
        var response = await Http.GetAsync($"/api/ThirdPartyAssessment/GetOne?assessmentId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            var list = System.Text.Json.JsonSerializer.Deserialize<List<ThirdPartyAssessment>>(json);
            editing = list?.FirstOrDefault();
        }
    }

    private async Task Save()
    {
        var response = await Http.PostAsJsonAsync("/api/ThirdPartyAssessment/Save", editing);
        if (response.IsSuccessStatusCode)
        {
            editing = null;
            await LoadAssessments();
        }
    }

    private void Cancel()
    {
        editing = null;
    }

    private async Task Delete(int? id)
    {
        if (!id.HasValue) return;
        var response = await Http.DeleteAsync($"/api/ThirdPartyAssessment/Delete?assessmentId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            await LoadAssessments();
        }
    }
}
