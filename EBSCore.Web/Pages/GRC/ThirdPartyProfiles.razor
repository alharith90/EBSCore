@page "/GRC/ThirdPartyProfiles"
@using System.Net.Http.Json
@using EBSCore.Web.Models.GRC
@inject HttpClient Http

<h3>@Localizer["ThirdPartyProfiles"]</h3>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="CreateNew">@Localizer["AddNew"]</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["ThirdPartyName"]</th>
            <th>@Localizer["ServiceType"]</th>
            <th>@Localizer["CriticalityTier"]</th>
            <th>@Localizer["Status"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (profiles is null)
        {
            <tr><td colspan="5">@Localizer["Loading"]</td></tr>
        }
        else if (!profiles.Any())
        {
            <tr><td colspan="5">@Localizer["NoData"]</td></tr>
        }
        else
        {
            @foreach (var profile in profiles)
            {
                <tr>
                    <td>@profile.ThirdPartyName</td>
                    <td>@profile.ServiceType</td>
                    <td>@profile.CriticalityTier</td>
                    <td>@profile.Status</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => Edit(profile.ThirdPartyID)">@Localizer["Edit"]</button>
                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => Delete(profile.ThirdPartyID)">@Localizer["Delete"]</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (editing != null)
{
    <div class="card mt-4">
        <div class="card-header">@Localizer[editing.ThirdPartyID.HasValue ? "EditProfile" : "AddProfile"]</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ThirdPartyName"]</label>
                    <input class="form-control" @bind="editing.ThirdPartyName" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ServiceType"]</label>
                    <input class="form-control" @bind="editing.ServiceType" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["CriticalityTier"]</label>
                    <input class="form-control" @bind="editing.CriticalityTier" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["InherentRiskRating"]</label>
                    <input class="form-control" @bind="editing.InherentRiskRating" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["CountryRegion"]</label>
                    <input class="form-control" @bind="editing.CountryRegion" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["BusinessOwner"]</label>
                    <input class="form-control" @bind="editing.BusinessOwner" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ContractValue"]</label>
                    <input class="form-control" @bind="editing.ContractValue" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ContractExpiryDate"]</label>
                    <input type="date" class="form-control" @bind-value="editing.ContractExpiryDate" @bind-value:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["KeySLAKPIRequirements"]</label>
                    <textarea class="form-control" @bind="editing.KeySLAKPIRequirements"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ComplianceRequirements"]</label>
                    <textarea class="form-control" @bind="editing.ComplianceRequirements"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["PrivacyDataProcessing"]</label>
                    <input type="checkbox" class="form-check-input" @bind="editing.PrivacyDataProcessing" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RelatedAssetProcess"]</label>
                    <input class="form-control" @bind="editing.RelatedAssetProcess" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ContingencyPlan"]</label>
                    <textarea class="form-control" @bind="editing.ContingencyPlan"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["LastAssessmentDate"]</label>
                    <input type="date" class="form-control" @bind-value="editing.LastAssessmentDate" @bind-value:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["NextReviewDate"]</label>
                    <input type="date" class="form-control" @bind-value="editing.NextReviewDate" @bind-value:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Status"]</label>
                    <input class="form-control" @bind="editing.Status" />
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
                <button class="btn btn-secondary ms-2" @onclick="Cancel">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject] public Microsoft.Extensions.Localization.IStringLocalizer<ThirdPartyProfiles> Localizer { get; set; }

    private List<ThirdPartyProfile> profiles;
    private ThirdPartyProfile editing;

    protected override async Task OnInitializedAsync()
    {
        await LoadProfiles();
    }

    private async Task LoadProfiles()
    {
        var response = await Http.GetAsync("/api/ThirdPartyProfile/Get");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            profiles = System.Text.Json.JsonSerializer.Deserialize<List<ThirdPartyProfile>>(json);
        }
    }

    private void CreateNew()
    {
        editing = new ThirdPartyProfile();
    }

    private async Task Edit(int? id)
    {
        if (!id.HasValue) return;
        var response = await Http.GetAsync($"/api/ThirdPartyProfile/GetOne?thirdPartyId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            var list = System.Text.Json.JsonSerializer.Deserialize<List<ThirdPartyProfile>>(json);
            editing = list?.FirstOrDefault();
        }
    }

    private async Task Save()
    {
        var response = await Http.PostAsJsonAsync("/api/ThirdPartyProfile/Save", editing);
        if (response.IsSuccessStatusCode)
        {
            editing = null;
            await LoadProfiles();
        }
    }

    private void Cancel()
    {
        editing = null;
    }

    private async Task Delete(int? id)
    {
        if (!id.HasValue) return;
        var response = await Http.DeleteAsync($"/api/ThirdPartyProfile/Delete?thirdPartyId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            await LoadProfiles();
        }
    }
}
