@page "/GRC/RiskRegister"
@using RiskRegisterModel = EBSCore.Web.Models.GRC.RiskRegister
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.Extensions.Localization
@using Microsoft.JSInterop
@using Newtonsoft.Json
@using System.Linq
@using System.Net.Http
@using System.Net.Http.Json
@using EBSCore.Web.Services
@inject IJSRuntime JS
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IStringLocalizerFactory LocalizerFactory
@inject PageTitleService PageTitleService

@if (!ShowInputScreen)
{
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@Localizer["PageTitle"]</h5>
                    <button type="button" class="btn btn-success" @onclick="ShowInput">
                        <i class="fas fa-plus"></i>&nbsp; @GLocalizer["AddRecord"]
                    </button>
                </div>
                <div class="card-body">
                    @if (ListRisks.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped align-middle">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>@Localizer["RiskTitle"]</th>
                                        <th>@Localizer["RiskDescription"]</th>
                                        <th>@Localizer["RiskCategory"]</th>
                                        <th>@Localizer["Likelihood"]</th>
                                        <th>@Localizer["Impact"]</th>
                                        <th>@Localizer["ResidualRiskLevel"]</th>
                                        <th>@Localizer["RiskTrend"]</th>
                                        <th>@Localizer["RiskOwner"]</th>
                                        <th>@Localizer["Status"]</th>
                                        <th>@GLocalizer["Actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ var idx = 0; }
                                    @foreach (var risk in ListRisks)
                                    {
                                        idx++;
                                        <tr>
                                            <td>@idx</td>
                                            <td class="text-truncate" style="max-width: 180px;">@risk.RiskTitle</td>
                                            <td class="text-truncate" style="max-width: 220px;">@risk.RiskDescription</td>
                                            <td>@risk.RiskCategory</td>
                                            <td>@risk.Likelihood</td>
                                            <td>@risk.Impact</td>
                                            <td>@risk.ResidualRiskLevel</td>
                                            <td>@risk.RiskTrend</td>
                                            <td>@risk.RiskOwner</td>
                                            <td>@risk.Status</td>
                                            <td>
                                                <button class="btn btn-sm btn-info" @onclick="() => EditRisk(risk)"><i class="fas fa-edit"></i></button>
                                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteRisk(risk)"><i class="fas fa-trash"></i></button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="mb-0">@GLocalizer["EmptyTable"]</p>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="linear">
        <EditForm EditContext="EditContext" OnValidSubmit="SaveRiskAsync">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">@Localizer["ModalTitle"]</h5>
                </div>
                <div class="card-body">
                    <DataAnnotationsValidator />
                    @if (ShowValidationMessage)
                    {
                        <ValidationSummary />
                    }
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RiskTitle"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.RiskTitle" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RiskCategory"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.RiskCategory" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RiskDescription"]</label>
                            <textarea class="form-control" rows="3" @bind-value="CurrentRisk.RiskDescription" @bind-value:event="oninput"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RiskSource"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.RiskSource" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["PotentialImpact"]</label>
                            <textarea class="form-control" rows="3" @bind-value="CurrentRisk.PotentialImpact" @bind-value:event="oninput"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["Likelihood"]</label>
                            <select class="form-select" @bind-value="CurrentRisk.Likelihood">
                                @foreach (var option in LikelihoodOptions)
                                {
                                    <option value="@option">@option</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["Impact"]</label>
                            <select class="form-select" @bind-value="CurrentRisk.Impact">
                                @foreach (var option in ImpactOptions)
                                {
                                    <option value="@option">@option</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["InherentLikelihood"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.InherentLikelihood" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["InherentImpact"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.InherentImpact" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["InherentRiskLevel"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.InherentRiskLevel" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["ExistingControls"]</label>
                            <textarea class="form-control" rows="2" @bind-value="CurrentRisk.ExistingControls" @bind-value:event="oninput"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["ControlEffectiveness"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.ControlEffectiveness" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["ResidualLikelihood"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.ResidualLikelihood" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["ResidualImpact"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.ResidualImpact" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["ResidualRiskLevel"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.ResidualRiskLevel" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RiskScore"]</label>
                            <input class="form-control" type="number" min="0" @bind-value="CurrentRisk.RiskScore" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RiskAppetiteThreshold"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.RiskAppetiteThreshold" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RiskResponseStrategy"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.RiskResponseStrategy" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["TreatmentPlanID"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.TreatmentPlanID" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RiskResponse"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.RiskResponse" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RiskOwner"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.RiskOwner" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["Status"]</label>
                            <select class="form-select" @bind-value="CurrentRisk.Status">
                                @foreach (var option in StatusOptions)
                                {
                                    <option value="@option">@option</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["ReviewDate"]</label>
                            <input class="form-control" type="date" @bind-value="CurrentRisk.ReviewDate" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["NextReviewDate"]</label>
                            <input class="form-control" type="date" @bind-value="CurrentRisk.NextReviewDate" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RiskTrend"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.RiskTrend" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RelatedObjectives"]</label>
                            <textarea class="form-control" rows="2" @bind-value="CurrentRisk.RelatedObjectives" @bind-value:event="oninput"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RelatedIncidents"]</label>
                            <textarea class="form-control" rows="2" @bind-value="CurrentRisk.RelatedIncidents" @bind-value:event="oninput"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RelatedControls"]</label>
                            <textarea class="form-control" rows="2" @bind-value="CurrentRisk.RelatedControls" @bind-value:event="oninput"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RelatedObligations"]</label>
                            <textarea class="form-control" rows="2" @bind-value="CurrentRisk.RelatedObligations" @bind-value:event="oninput"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["MonitoringFrequency"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.MonitoringFrequency" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["LastMonitoringDate"]</label>
                            <input class="form-control" type="date" @bind-value="CurrentRisk.LastMonitoringDate" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["NextMonitoringDate"]</label>
                            <input class="form-control" type="date" @bind-value="CurrentRisk.NextMonitoringDate" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["KRIName"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.KRIName" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["KRIValue"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.KRIValue" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["KRIStatus"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.KRIStatus" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["RiskAlertTrigger"]</label>
                            <input class="form-control" @bind-value="CurrentRisk.RiskAlertTrigger" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">@Localizer["RiskHistoryNotes"]</label>
                            <textarea class="form-control" rows="3" @bind-value="CurrentRisk.RiskHistoryNotes" @bind-value:event="oninput"></textarea>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-5"><i class="fas fa-save"></i> &nbsp;@GLocalizer["Save"]</button>
                    <button type="button" @onclick="ShowDisplay" class="btn btn-light btn-outline-dark"><i class="fas fa-arrow-circle-left"></i> &nbsp;@GLocalizer["Cancel"]</button>
                </div>
            </div>
        </EditForm>
    </div>
}

@code {
    bool ShowInputScreen = false;
    bool ShowValidationMessage = false;

    List<RiskRegisterModel> ListRisks = new();
    RiskRegisterModel CurrentRisk = new();

    EditContext EditContext = default!;

    IStringLocalizer Localizer = default!;
    IStringLocalizer GLocalizer = default!;

    readonly string[] LikelihoodOptions = new[] { "Very Low", "Low", "Medium", "High", "Very High" };
    readonly string[] ImpactOptions = new[] { "Minor", "Moderate", "Major", "Critical" };
    readonly string[] StatusOptions = new[] { "Open", "In Progress", "Closed" };

    bool _firstRenderDone = false;

    protected override async Task OnInitializedAsync()
    {
        EditContext = new EditContext(CurrentRisk);
        Localizer = LocalizerFactory.Create(new Uri(Navigation.Uri).AbsolutePath, "");
        GLocalizer = LocalizerFactory.Create("Common", "");
        PageTitleService.CurrentPageTitle = Localizer["PageTitle"];
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _firstRenderDone = true;
            await LoadRisksAsync();
            StateHasChanged();
        }
    }

    private async Task LoadRisksAsync()
    {
        try
        {
            var response = await Http.GetStringAsync("api/RiskRegister/Get");
            ListRisks = JsonConvert.DeserializeObject<List<RiskRegisterModel>>(response) ?? new();
        }
        catch (Exception ex)
        {
            if (_firstRenderDone)
            {
                await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Load Failed", text = ex.Message });
            }
        }
        StateHasChanged();
    }

    private async Task ShowInput()
    {
        CurrentRisk = new RiskRegisterModel
        {
            Status = StatusOptions.First(),
            Likelihood = LikelihoodOptions.First(),
            Impact = ImpactOptions.First()
        };
        EditContext = new EditContext(CurrentRisk);
        ShowValidationMessage = false;
        ShowInputScreen = true;
    }

    private async Task ShowDisplay()
    {
        ShowInputScreen = false;
    }

    private async Task SaveRiskAsync()
    {
        if (EditContext.Validate())
        {
            var response = await Http.PostAsJsonAsync("api/RiskRegister/Save", CurrentRisk);
            if (response.IsSuccessStatusCode)
            {
                await ShowDisplay();
                await LoadRisksAsync();
                await JS.InvokeVoidAsync("Toast.fire", new { icon = "success", title = Localizer["SaveSuccess"] });
            }
            else
            {
                await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Error!", text = response.ReasonPhrase ?? "Something went wrong" });
            }
        }
        else
        {
            ShowValidationMessage = true;
        }
    }

    private async Task EditRisk(RiskRegisterModel risk)
    {
        var response = await Http.GetStringAsync($"api/RiskRegister/GetOne?riskId={risk.RiskID}");
        var data = JsonConvert.DeserializeObject<List<RiskRegisterModel>>(response);
        if (data?.Any() == true)
        {
            CurrentRisk = data.First();
            EditContext = new EditContext(CurrentRisk);
            ShowInputScreen = true;
        }
    }

    private async Task DeleteRisk(RiskRegisterModel risk)
    {
        var result = await JS.InvokeAsync<object>("Swal.fire", new
        {
            title = Localizer["DeleteTitle"],
            text = string.Format(Localizer["DeleteText"], risk.RiskID),
            icon = "warning",
            showCancelButton = true,
            confirmButtonColor = "#d33",
            cancelButtonColor = "#3085d6",
            confirmButtonText = Localizer["ConfirmDelete"],
            cancelButtonText = GLocalizer["Cancel"]
        });

        var json = result?.ToString();
        if (json != null && json.Contains("\"isConfirmed\":true"))
        {
            var request = new HttpRequestMessage(HttpMethod.Delete, "api/RiskRegister/Delete")
            {
                Content = JsonContent.Create(new RiskRegisterModel { RiskID = risk.RiskID })
            };
            var response = await Http.SendAsync(request);
            if (response.IsSuccessStatusCode)
            {
                await LoadRisksAsync();
                await JS.InvokeVoidAsync("Toast.fire", new { icon = "success", title = Localizer["DeleteSuccess"] });
            }
            else
            {
                await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Error!", text = response.ReasonPhrase ?? "Deletion failed" });
            }
        }
    }
}
