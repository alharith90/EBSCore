@page "/GRC/ComplianceObligations"
@using System.Net.Http.Json
@using EBSCore.Web.Models.GRC
@inject HttpClient Http

<h3>@Localizer["ComplianceObligations"]</h3>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="CreateNew">@Localizer["AddNew"]</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["ObligationTitle"]</th>
            <th>@Localizer["Source"]</th>
            <th>@Localizer["ComplianceStatus"]</th>
            <th>@Localizer["NextReviewDate"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (obligations is null)
        {
            <tr><td colspan="5">@Localizer["Loading"]</td></tr>
        }
        else if (!obligations.Any())
        {
            <tr><td colspan="5">@Localizer["NoData"]</td></tr>
        }
        else
        {
            @foreach (var item in obligations)
            {
                <tr>
                    <td>@item.ObligationTitle</td>
                    <td>@item.Source</td>
                    <td>@item.ComplianceStatus</td>
                    <td>@item.NextReviewDate?.ToString("yyyy-MM-dd")</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => Edit(item.ObligationID)">@Localizer["Edit"]</button>
                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => Delete(item.ObligationID)">@Localizer["Delete"]</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (editing != null)
{
    <div class="card mt-4">
        <div class="card-header">@Localizer[editing.ObligationID.HasValue ? "EditObligation" : "AddObligation"]</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ObligationTitle"]</label>
                    <input class="form-control" @bind="editing.ObligationTitle" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ObligationDescription"]</label>
                    <textarea class="form-control" @bind="editing.ObligationDescription"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Source"]</label>
                    <input class="form-control" @bind="editing.Source" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ClauseReference"]</label>
                    <input class="form-control" @bind="editing.ClauseReference" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ResponsibleDepartment"]</label>
                    <input class="form-control" @bind="editing.ResponsibleDepartment" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ObligationOwner"]</label>
                    <input class="form-control" @bind="editing.ObligationOwner" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ComplianceStatus"]</label>
                    <input class="form-control" @bind="editing.ComplianceStatus" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["LastAssessmentDate"]</label>
                    <input type="date" class="form-control" @bind-value="editing.LastAssessmentDate" @bind-value:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["NextReviewDate"]</label>
                    <input type="date" class="form-control" @bind-value="editing.NextReviewDate" @bind-value:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RelatedControls"]</label>
                    <textarea class="form-control" @bind="editing.RelatedControls"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RelatedRisks"]</label>
                    <textarea class="form-control" @bind="editing.RelatedRisks"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RelatedPolicy"]</label>
                    <input class="form-control" @bind="editing.RelatedPolicy" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["EvidenceOfCompliance"]</label>
                    <textarea class="form-control" @bind="editing.EvidenceOfCompliance"></textarea>
                </div>
                <div class="col-12">
                    <label class="form-label">@Localizer["Comments"]</label>
                    <textarea class="form-control" @bind="editing.Comments"></textarea>
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
                <button class="btn btn-secondary ms-2" @onclick="Cancel">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject] public Microsoft.Extensions.Localization.IStringLocalizer<ComplianceObligations> Localizer { get; set; }

    private List<ComplianceObligation> obligations;
    private ComplianceObligation editing;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        var response = await Http.GetAsync("/api/ComplianceObligation/Get");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            obligations = System.Text.Json.JsonSerializer.Deserialize<List<ComplianceObligation>>(json);
        }
    }

    private void CreateNew()
    {
        editing = new ComplianceObligation();
    }

    private async Task Edit(long? id)
    {
        if (!id.HasValue) return;
        var response = await Http.GetAsync($"/api/ComplianceObligation/GetOne?obligationId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            var items = System.Text.Json.JsonSerializer.Deserialize<List<ComplianceObligation>>(json);
            editing = items.FirstOrDefault();
        }
    }

    private async Task Save()
    {
        if (editing is null) return;
        var response = await Http.PostAsJsonAsync("/api/ComplianceObligation/Save", editing);
        if (response.IsSuccessStatusCode)
        {
            editing = null;
            await LoadData();
        }
    }

    private void Cancel()
    {
        editing = null;
    }

    private async Task Delete(long? id)
    {
        if (!id.HasValue) return;
        var response = await Http.DeleteAsync($"/api/ComplianceObligation/Delete?obligationId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            await LoadData();
        }
    }
}
