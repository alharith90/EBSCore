@page "/GRC/ComplianceIssues"
@using System.Net.Http.Json
@using EBSCore.Web.Models.GRC
@inject HttpClient Http

<h3>@Localizer["ComplianceIssues"]</h3>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="CreateNew">@Localizer["AddNew"]</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["IssueDescription"]</th>
            <th>@Localizer["Severity"]</th>
            <th>@Localizer["Status"]</th>
            <th>@Localizer["TargetCompletionDate"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (issues is null)
        {
            <tr><td colspan="5">@Localizer["Loading"]</td></tr>
        }
        else if (!issues.Any())
        {
            <tr><td colspan="5">@Localizer["NoData"]</td></tr>
        }
        else
        {
            @foreach (var issue in issues)
            {
                <tr>
                    <td>@issue.IssueDescription</td>
                    <td>@issue.Severity</td>
                    <td>@issue.Status</td>
                    <td>@issue.TargetCompletionDate?.ToString("yyyy-MM-dd")</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => Edit(issue.IssueID)">@Localizer["Edit"]</button>
                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => Delete(issue.IssueID)">@Localizer["Delete"]</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (editing != null)
{
    <div class="card mt-4">
        <div class="card-header">@Localizer[editing.IssueID.HasValue ? "EditIssue" : "AddIssue"]</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["IssueDescription"]</label>
                    <textarea class="form-control" @bind="editing.IssueDescription"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["DateDetected"]</label>
                    <input type="date" class="form-control" @bind-value="editing.DateDetected" @bind-value:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Source"]</label>
                    <input class="form-control" @bind="editing.Source" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RelatedObligation"]</label>
                    <input class="form-control" @bind="editing.RelatedObligation" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Severity"]</label>
                    <input class="form-control" @bind="editing.Severity" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Impact"]</label>
                    <textarea class="form-control" @bind="editing.Impact"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RootCause"]</label>
                    <textarea class="form-control" @bind="editing.RootCause"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["CorrectiveActionPlan"]</label>
                    <textarea class="form-control" @bind="editing.CorrectiveActionPlan"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["TargetCompletionDate"]</label>
                    <input type="date" class="form-control" @bind-value="editing.TargetCompletionDate" @bind-value:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ActionStatus"]</label>
                    <input class="form-control" @bind="editing.ActionStatus" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RegulatoryReportingDate"]</label>
                    <input type="date" class="form-control" @bind-value="editing.RegulatoryReportingDate" @bind-value:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Status"]</label>
                    <input class="form-control" @bind="editing.Status" />
                </div>
                <div class="col-12">
                    <label class="form-label">@Localizer["LessonsLearned"]</label>
                    <textarea class="form-control" @bind="editing.LessonsLearned"></textarea>
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
                <button class="btn btn-secondary ms-2" @onclick="Cancel">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject] public Microsoft.Extensions.Localization.IStringLocalizer<ComplianceIssues> Localizer { get; set; }

    private List<ComplianceIssue> issues;
    private ComplianceIssue editing;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        var response = await Http.GetAsync("/api/ComplianceIssue/Get");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            issues = System.Text.Json.JsonSerializer.Deserialize<List<ComplianceIssue>>(json);
        }
    }

    private void CreateNew()
    {
        editing = new ComplianceIssue();
    }

    private async Task Edit(long? id)
    {
        if (!id.HasValue) return;
        var response = await Http.GetAsync($"/api/ComplianceIssue/GetOne?issueId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            var items = System.Text.Json.JsonSerializer.Deserialize<List<ComplianceIssue>>(json);
            editing = items.FirstOrDefault();
        }
    }

    private async Task Save()
    {
        if (editing is null) return;
        var response = await Http.PostAsJsonAsync("/api/ComplianceIssue/Save", editing);
        if (response.IsSuccessStatusCode)
        {
            editing = null;
            await LoadData();
        }
    }

    private void Cancel()
    {
        editing = null;
    }

    private async Task Delete(long? id)
    {
        if (!id.HasValue) return;
        var response = await Http.DeleteAsync($"/api/ComplianceIssue/Delete?issueId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            await LoadData();
        }
    }
}
