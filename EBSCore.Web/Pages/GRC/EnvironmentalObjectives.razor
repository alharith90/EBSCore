@page "/GRC/EnvironmentalObjectives"
@using System.Net.Http.Json
@using EBSCore.Web.Models.GRC
@inject HttpClient Http

<h3>@Localizer["EnvironmentalObjectives"]</h3>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="CreateNew">@Localizer["AddNew"]</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["ObjectiveDescription"]</th>
            <th>@Localizer["TargetValue"]</th>
            <th>@Localizer["TargetDate"]</th>
            <th>@Localizer["ResponsibleOwner"]</th>
            <th>@Localizer["Status"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (objectives is null)
        {
            <tr><td colspan="6">@Localizer["Loading"]</td></tr>
        }
        else if (!objectives.Any())
        {
            <tr><td colspan="6">@Localizer["NoData"]</td></tr>
        }
        else
        {
            @foreach (var objective in objectives)
            {
                <tr>
                    <td>@objective.ObjectiveDescription</td>
                    <td>@objective.TargetValue</td>
                    <td>@objective.TargetDate?.ToString("yyyy-MM-dd")</td>
                    <td>@objective.ResponsibleOwner</td>
                    <td>@objective.Status</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => Edit(objective.ObjectiveID)">@Localizer["Edit"]</button>
                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => Delete(objective.ObjectiveID)">@Localizer["Delete"]</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (editing != null)
{
    <div class="card mt-4">
        <div class="card-header">@Localizer[editing.ObjectiveID.HasValue ? "EditObjective" : "AddObjective"]</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ObjectiveDescription"]</label>
                    <input class="form-control" @bind="editing.ObjectiveDescription" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["TargetValue"]</label>
                    <input class="form-control" @bind="editing.TargetValue" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Unit"]</label>
                    <input class="form-control" @bind="editing.Unit" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["BaselineValue"]</label>
                    <input class="form-control" @bind="editing.BaselineValue" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["CurrentValue"]</label>
                    <input class="form-control" @bind="editing.CurrentValue" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["TargetDate"]</label>
                    <input type="date" class="form-control" @bind-value="editing.TargetDate" @bind-value:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ResponsibleOwner"]</label>
                    <input class="form-control" @bind="editing.ResponsibleOwner" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Status"]</label>
                    <input class="form-control" @bind="editing.Status" />
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
                <button class="btn btn-secondary ms-2" @onclick="Cancel">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject] public Microsoft.Extensions.Localization.IStringLocalizer<EnvironmentalObjectives> Localizer { get; set; }

    private List<EnvironmentalObjective> objectives;
    private EnvironmentalObjective editing;

    protected override async Task OnInitializedAsync()
    {
        await LoadObjectives();
    }

    private async Task LoadObjectives()
    {
        var response = await Http.GetAsync("/api/EnvironmentalObjective/Get");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            objectives = System.Text.Json.JsonSerializer.Deserialize<List<EnvironmentalObjective>>(json);
        }
    }

    private void CreateNew()
    {
        editing = new EnvironmentalObjective();
    }

    private async Task Edit(long? id)
    {
        if (!id.HasValue) return;
        var response = await Http.GetAsync($"/api/EnvironmentalObjective/GetOne?objectiveId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            var items = System.Text.Json.JsonSerializer.Deserialize<List<EnvironmentalObjective>>(json);
            editing = items?.FirstOrDefault();
        }
    }

    private async Task Save()
    {
        var response = await Http.PostAsJsonAsync("/api/EnvironmentalObjective/Save", editing);
        if (response.IsSuccessStatusCode)
        {
            editing = null;
            await LoadObjectives();
        }
    }

    private void Cancel()
    {
        editing = null;
    }

    private async Task Delete(long? id)
    {
        if (!id.HasValue) return;
        await Http.DeleteAsync($"/api/EnvironmentalObjective/Delete?objectiveId={id.Value}");
        await LoadObjectives();
    }
}
