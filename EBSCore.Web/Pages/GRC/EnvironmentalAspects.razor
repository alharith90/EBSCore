@page "/GRC/EnvironmentalAspects"
@using System.Net.Http.Json
@using EBSCore.Web.Models.GRC
@inject HttpClient Http

<h3>@Localizer["EnvironmentalAspects"]</h3>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="CreateNew">@Localizer["AddNew"]</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["AspectDescription"]</th>
            <th>@Localizer["EnvironmentalImpact"]</th>
            <th>@Localizer["AspectOwner"]</th>
            <th>@Localizer["Status"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (aspects is null)
        {
            <tr><td colspan="5">@Localizer["Loading"]</td></tr>
        }
        else if (!aspects.Any())
        {
            <tr><td colspan="5">@Localizer["NoData"]</td></tr>
        }
        else
        {
            @foreach (var aspect in aspects)
            {
                <tr>
                    <td>@aspect.AspectDescription</td>
                    <td>@aspect.EnvironmentalImpact</td>
                    <td>@aspect.AspectOwner</td>
                    <td>@aspect.Status</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => Edit(aspect.AspectID)">@Localizer["Edit"]</button>
                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => Delete(aspect.AspectID)">@Localizer["Delete"]</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (editing != null)
{
    <div class="card mt-4">
        <div class="card-header">@Localizer[editing.AspectID.HasValue ? "EditAspect" : "AddAspect"]</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["AspectDescription"]</label>
                    <input class="form-control" @bind="editing.AspectDescription" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["EnvironmentalImpact"]</label>
                    <input class="form-control" @bind="editing.EnvironmentalImpact" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ImpactSeverity"]</label>
                    <input class="form-control" @bind="editing.ImpactSeverity" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["FrequencyLikelihood"]</label>
                    <input class="form-control" @bind="editing.FrequencyLikelihood" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["SignificanceRating"]</label>
                    <input class="form-control" @bind="editing.SignificanceRating" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ControlsInPlace"]</label>
                    <textarea class="form-control" @bind="editing.ControlsInPlace"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["LegalRequirement"]</label>
                    <textarea class="form-control" @bind="editing.LegalRequirement"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ImprovementActions"]</label>
                    <textarea class="form-control" @bind="editing.ImprovementActions"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["AspectOwner"]</label>
                    <input class="form-control" @bind="editing.AspectOwner" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["MonitoringMetric"]</label>
                    <input class="form-control" @bind="editing.MonitoringMetric" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["LastEvaluationDate"]</label>
                    <input type="date" class="form-control" @bind="editing.LastEvaluationDate" @bind:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Status"]</label>
                    <input class="form-control" @bind="editing.Status" />
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
                <button class="btn btn-secondary ms-2" @onclick="Cancel">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject] public Microsoft.Extensions.Localization.IStringLocalizer<EnvironmentalAspects> Localizer { get; set; }

    private List<EnvironmentalAspect> aspects;
    private EnvironmentalAspect editing;

    protected override async Task OnInitializedAsync()
    {
        await LoadAspects();
    }

    private async Task LoadAspects()
    {
        var response = await Http.GetAsync("/api/EnvironmentalAspect/Get");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            aspects = System.Text.Json.JsonSerializer.Deserialize<List<EnvironmentalAspect>>(json);
        }
    }

    private void CreateNew()
    {
        editing = new EnvironmentalAspect();
    }

    private async Task Edit(long? id)
    {
        if (!id.HasValue) return;
        var response = await Http.GetAsync($"/api/EnvironmentalAspect/GetOne?aspectId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            var items = System.Text.Json.JsonSerializer.Deserialize<List<EnvironmentalAspect>>(json);
            editing = items?.FirstOrDefault();
        }
    }

    private async Task Save()
    {
        var response = await Http.PostAsJsonAsync("/api/EnvironmentalAspect/Save", editing);
        if (response.IsSuccessStatusCode)
        {
            editing = null;
            await LoadAspects();
        }
    }

    private void Cancel()
    {
        editing = null;
    }

    private async Task Delete(long? id)
    {
        if (!id.HasValue) return;
        await Http.DeleteAsync($"/api/EnvironmentalAspect/Delete?aspectId={id.Value}");
        await LoadAspects();
    }
}
