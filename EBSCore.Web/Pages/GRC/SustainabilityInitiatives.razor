@page "/GRC/SustainabilityInitiatives"
@using System.Net.Http.Json
@using EBSCore.Web.Models.GRC
@inject HttpClient Http

<h3>@Localizer["SustainabilityInitiatives"]</h3>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="CreateNew">@Localizer["AddNew"]</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["InitiativeName"]</th>
            <th>@Localizer["ESGCategory"]</th>
            <th>@Localizer["StartDate"]</th>
            <th>@Localizer["EndDate"]</th>
            <th>@Localizer["Status"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (initiatives is null)
        {
            <tr><td colspan="6">@Localizer["Loading"]</td></tr>
        }
        else if (!initiatives.Any())
        {
            <tr><td colspan="6">@Localizer["NoData"]</td></tr>
        }
        else
        {
            @foreach (var initiative in initiatives)
            {
                <tr>
                    <td>@initiative.InitiativeName</td>
                    <td>@initiative.ESGCategory</td>
                    <td>@initiative.StartDate?.ToString("yyyy-MM-dd")</td>
                    <td>@initiative.EndDate?.ToString("yyyy-MM-dd")</td>
                    <td>@initiative.Status</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => Edit(initiative.InitiativeID)">@Localizer["Edit"]</button>
                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => Delete(initiative.InitiativeID)">@Localizer["Delete"]</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (editing != null)
{
    <div class="card mt-4">
        <div class="card-header">@Localizer[editing.InitiativeID.HasValue ? "EditInitiative" : "AddInitiative"]</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["InitiativeName"]</label>
                    <input class="form-control" @bind="editing.InitiativeName" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ESGCategory"]</label>
                    <input class="form-control" @bind="editing.ESGCategory" />
                </div>
                <div class="col-md-12">
                    <label class="form-label">@Localizer["Description"]</label>
                    <textarea class="form-control" @bind="editing.Description"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["StartDate"]</label>
                    <input type="date" class="form-control" @bind="editing.StartDate" @bind:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["EndDate"]</label>
                    <input type="date" class="form-control" @bind="editing.EndDate" @bind:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ResponsibleDepartment"]</label>
                    <input class="form-control" @bind="editing.ResponsibleDepartment" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["KeyMetrics"]</label>
                    <input class="form-control" @bind="editing.KeyMetrics" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["BudgetAllocated"]</label>
                    <input class="form-control" @bind="editing.BudgetAllocated" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Outcome"]</label>
                    <textarea class="form-control" @bind="editing.Outcome"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Status"]</label>
                    <input class="form-control" @bind="editing.Status" />
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
                <button class="btn btn-secondary ms-2" @onclick="Cancel">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject] public Microsoft.Extensions.Localization.IStringLocalizer<SustainabilityInitiatives> Localizer { get; set; }

    private List<SustainabilityInitiative> initiatives;
    private SustainabilityInitiative editing;

    protected override async Task OnInitializedAsync()
    {
        await LoadInitiatives();
    }

    private async Task LoadInitiatives()
    {
        var response = await Http.GetAsync("/api/SustainabilityInitiative/Get");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            initiatives = System.Text.Json.JsonSerializer.Deserialize<List<SustainabilityInitiative>>(json);
        }
    }

    private void CreateNew()
    {
        editing = new SustainabilityInitiative();
    }

    private async Task Edit(long? id)
    {
        if (!id.HasValue) return;
        var response = await Http.GetAsync($"/api/SustainabilityInitiative/GetOne?initiativeId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            var items = System.Text.Json.JsonSerializer.Deserialize<List<SustainabilityInitiative>>(json);
            editing = items?.FirstOrDefault();
        }
    }

    private async Task Save()
    {
        var response = await Http.PostAsJsonAsync("/api/SustainabilityInitiative/Save", editing);
        if (response.IsSuccessStatusCode)
        {
            editing = null;
            await LoadInitiatives();
        }
    }

    private void Cancel()
    {
        editing = null;
    }

    private async Task Delete(long? id)
    {
        if (!id.HasValue) return;
        await Http.DeleteAsync($"/api/SustainabilityInitiative/Delete?initiativeId={id.Value}");
        await LoadInitiatives();
    }
}
