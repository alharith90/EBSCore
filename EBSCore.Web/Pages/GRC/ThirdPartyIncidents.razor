@page "/GRC/ThirdPartyIncidents"
@using System.Net.Http.Json
@using EBSCore.Web.Models.GRC
@inject HttpClient Http

<h3>@Localizer["ThirdPartyIncidents"]</h3>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="CreateNew">@Localizer["AddNew"]</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["ThirdPartyID"]</th>
            <th>@Localizer["IssueType"]</th>
            <th>@Localizer["Date"]</th>
            <th>@Localizer["Status"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (incidents is null)
        {
            <tr><td colspan="5">@Localizer["Loading"]</td></tr>
        }
        else if (!incidents.Any())
        {
            <tr><td colspan="5">@Localizer["NoData"]</td></tr>
        }
        else
        {
            @foreach (var incident in incidents)
            {
                <tr>
                    <td>@incident.ThirdPartyID</td>
                    <td>@incident.IssueType</td>
                    <td>@incident.Date?.ToString("yyyy-MM-dd")</td>
                    <td>@incident.Status</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => Edit(incident.IssueIncidentID)">@Localizer["Edit"]</button>
                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => Delete(incident.IssueIncidentID)">@Localizer["Delete"]</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (editing != null)
{
    <div class="card mt-4">
        <div class="card-header">@Localizer[editing.IssueIncidentID.HasValue ? "EditIncident" : "AddIncident"]</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ThirdPartyID"]</label>
                    <input type="number" class="form-control" @bind="editing.ThirdPartyID" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["IssueType"]</label>
                    <input class="form-control" @bind="editing.IssueType" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Date"]</label>
                    <input type="date" class="form-control" @bind-value="editing.Date" @bind-value:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Description"]</label>
                    <textarea class="form-control" @bind="editing.Description"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ImpactOnBusiness"]</label>
                    <textarea class="form-control" @bind="editing.ImpactOnBusiness"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Severity"]</label>
                    <input class="form-control" @bind="editing.Severity" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RelatedSLABreach"]</label>
                    <input class="form-control" @bind="editing.RelatedSLABreach" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ActionsTakenByVendor"]</label>
                    <textarea class="form-control" @bind="editing.ActionsTakenByVendor"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ActionsTakenInternally"]</label>
                    <textarea class="form-control" @bind="editing.ActionsTakenInternally"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Status"]</label>
                    <input class="form-control" @bind="editing.Status" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["LinkedRiskEvent"]</label>
                    <input class="form-control" @bind="editing.LinkedRiskEvent" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Notes"]</label>
                    <textarea class="form-control" @bind="editing.Notes"></textarea>
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
                <button class="btn btn-secondary ms-2" @onclick="Cancel">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject] public Microsoft.Extensions.Localization.IStringLocalizer<ThirdPartyIncidents> Localizer { get; set; }

    private List<ThirdPartyIncident> incidents;
    private ThirdPartyIncident editing;

    protected override async Task OnInitializedAsync()
    {
        await LoadIncidents();
    }

    private async Task LoadIncidents()
    {
        var response = await Http.GetAsync("/api/ThirdPartyIncident/Get");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            incidents = System.Text.Json.JsonSerializer.Deserialize<List<ThirdPartyIncident>>(json);
        }
    }

    private void CreateNew()
    {
        editing = new ThirdPartyIncident();
    }

    private async Task Edit(int? id)
    {
        if (!id.HasValue) return;
        var response = await Http.GetAsync($"/api/ThirdPartyIncident/GetOne?issueIncidentId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            var list = System.Text.Json.JsonSerializer.Deserialize<List<ThirdPartyIncident>>(json);
            editing = list?.FirstOrDefault();
        }
    }

    private async Task Save()
    {
        var response = await Http.PostAsJsonAsync("/api/ThirdPartyIncident/Save", editing);
        if (response.IsSuccessStatusCode)
        {
            editing = null;
            await LoadIncidents();
        }
    }

    private void Cancel()
    {
        editing = null;
    }

    private async Task Delete(int? id)
    {
        if (!id.HasValue) return;
        var response = await Http.DeleteAsync($"/api/ThirdPartyIncident/Delete?issueIncidentId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            await LoadIncidents();
        }
    }
}
