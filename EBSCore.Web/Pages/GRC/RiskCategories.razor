@page "/GRC/RiskCategories"
@using System.Net.Http.Json
@using EBSCore.Web.Models.GRC
@inject HttpClient Http

<h3>@Localizer["RiskCategories"]</h3>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="CreateNew">@Localizer["AddNew"]</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["CategoryNameEN"]</th>
            <th>@Localizer["CategoryNameAR"]</th>
            <th>@Localizer["StatusID"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (categories is null)
        {
            <tr><td colspan="4">@Localizer["Loading"]</td></tr>
        }
        else if (!categories.Any())
        {
            <tr><td colspan="4">@Localizer["NoData"]</td></tr>
        }
        else
        {
            @foreach (var category in categories)
            {
                <tr>
                    <td>@category.CategoryNameEN</td>
                    <td>@category.CategoryNameAR</td>
                    <td>@category.StatusID</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => Edit(category.CategoryID)">@Localizer["Edit"]</button>
                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => Delete(category.CategoryID)">@Localizer["Delete"]</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (editing != null)
{
    <div class="card mt-4">
        <div class="card-header">@Localizer[editing.CategoryID.HasValue ? "EditCategory" : "AddCategory"]</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["CategoryNameEN"]</label>
                    <input class="form-control" @bind="editing.CategoryNameEN" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["CategoryNameAR"]</label>
                    <input class="form-control" @bind="editing.CategoryNameAR" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["DescriptionEN"]</label>
                    <textarea class="form-control" @bind="editing.DescriptionEN"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["DescriptionAR"]</label>
                    <textarea class="form-control" @bind="editing.DescriptionAR"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ParentCategoryID"]</label>
                    <input type="number" class="form-control" @bind="editing.ParentCategoryID" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["StatusID"]</label>
                    <input class="form-control" @bind="editing.StatusID" />
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
                <button class="btn btn-secondary ms-2" @onclick="Cancel">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject] public Microsoft.Extensions.Localization.IStringLocalizer<RiskCategories> Localizer { get; set; }

    private List<RiskCategory> categories;
    private RiskCategory editing;

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        var response = await Http.GetAsync("/api/RiskCategory/Get");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            categories = System.Text.Json.JsonSerializer.Deserialize<List<RiskCategory>>(json);
        }
    }

    private void CreateNew()
    {
        editing = new RiskCategory();
    }

    private async Task Edit(int? id)
    {
        if (!id.HasValue) return;
        var response = await Http.GetAsync($"/api/RiskCategory/GetOne?categoryId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            var list = System.Text.Json.JsonSerializer.Deserialize<List<RiskCategory>>(json);
            editing = list?.FirstOrDefault();
        }
    }

    private async Task Save()
    {
        if (editing == null) return;
        await Http.PostAsJsonAsync("/api/RiskCategory/Save", editing);
        editing = null;
        await LoadCategories();
    }

    private void Cancel()
    {
        editing = null;
    }

    private async Task Delete(int? id)
    {
        if (!id.HasValue) return;
        await Http.DeleteAsync($"/api/RiskCategory/Delete?categoryId={id.Value}");
        await LoadCategories();
    }
}
