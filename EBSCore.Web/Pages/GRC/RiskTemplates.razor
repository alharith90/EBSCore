@page "/GRC/RiskTemplates"
@using System.Net.Http.Json
@using EBSCore.Web.Models.GRC
@inject HttpClient Http

<h3>@Localizer["RiskTemplates"]</h3>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="CreateNew">@Localizer["AddNew"]</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["TemplateNameEN"]</th>
            <th>@Localizer["TemplateNameAR"]</th>
            <th>@Localizer["DefaultRiskLevel"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (templates is null)
        {
            <tr><td colspan="4">@Localizer["Loading"]</td></tr>
        }
        else if (!templates.Any())
        {
            <tr><td colspan="4">@Localizer["NoData"]</td></tr>
        }
        else
        {
            @foreach (var template in templates)
            {
                <tr>
                    <td>@template.TemplateNameEN</td>
                    <td>@template.TemplateNameAR</td>
                    <td>@template.DefaultRiskLevel</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => Edit(template.TemplateID)">@Localizer["Edit"]</button>
                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => Delete(template.TemplateID)">@Localizer["Delete"]</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (editing != null)
{
    <div class="card mt-4">
        <div class="card-header">@Localizer[editing.TemplateID.HasValue ? "EditTemplate" : "AddTemplate"]</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["TemplateNameEN"]</label>
                    <input class="form-control" @bind="editing.TemplateNameEN" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["TemplateNameAR"]</label>
                    <input class="form-control" @bind="editing.TemplateNameAR" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["DefaultCategoryID"]</label>
                    <input type="number" class="form-control" @bind="editing.DefaultCategoryID" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["DefaultImpact"]</label>
                    <input class="form-control" @bind="editing.DefaultImpact" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["DefaultLikelihood"]</label>
                    <input class="form-control" @bind="editing.DefaultLikelihood" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["DefaultRiskLevel"]</label>
                    <input class="form-control" @bind="editing.DefaultRiskLevel" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["GuidanceEN"]</label>
                    <textarea class="form-control" @bind="editing.GuidanceEN"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["GuidanceAR"]</label>
                    <textarea class="form-control" @bind="editing.GuidanceAR"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["StatusID"]</label>
                    <input class="form-control" @bind="editing.StatusID" />
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
                <button class="btn btn-secondary ms-2" @onclick="Cancel">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject] public Microsoft.Extensions.Localization.IStringLocalizer<RiskTemplates> Localizer { get; set; }

    private List<RiskTemplate> templates;
    private RiskTemplate editing;

    protected override async Task OnInitializedAsync()
    {
        await LoadTemplates();
    }

    private async Task LoadTemplates()
    {
        var response = await Http.GetAsync("/api/RiskTemplate/Get");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            templates = System.Text.Json.JsonSerializer.Deserialize<List<RiskTemplate>>(json);
        }
    }

    private void CreateNew()
    {
        editing = new RiskTemplate();
    }

    private async Task Edit(int? id)
    {
        if (!id.HasValue) return;
        var response = await Http.GetAsync($"/api/RiskTemplate/GetOne?templateId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            var list = System.Text.Json.JsonSerializer.Deserialize<List<RiskTemplate>>(json);
            editing = list?.FirstOrDefault();
        }
    }

    private async Task Save()
    {
        if (editing == null) return;
        await Http.PostAsJsonAsync("/api/RiskTemplate/Save", editing);
        editing = null;
        await LoadTemplates();
    }

    private void Cancel()
    {
        editing = null;
    }

    private async Task Delete(int? id)
    {
        if (!id.HasValue) return;
        await Http.DeleteAsync($"/api/RiskTemplate/Delete?templateId={id.Value}");
        await LoadTemplates();
    }
}
