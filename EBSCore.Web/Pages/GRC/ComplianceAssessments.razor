@page "/GRC/ComplianceAssessments"
@using System.Net.Http.Json
@using EBSCore.Web.Models.GRC
@inject HttpClient Http

<h3>@Localizer["ComplianceAssessments"]</h3>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="CreateNew">@Localizer["AddNew"]</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["ScopeCriteria"]</th>
            <th>@Localizer["Assessor"]</th>
            <th>@Localizer["AssessmentDate"]</th>
            <th>@Localizer["ComplianceScore"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (assessments is null)
        {
            <tr><td colspan="5">@Localizer["Loading"]</td></tr>
        }
        else if (!assessments.Any())
        {
            <tr><td colspan="5">@Localizer["NoData"]</td></tr>
        }
        else
        {
            @foreach (var assessment in assessments)
            {
                <tr>
                    <td>@assessment.ScopeCriteria</td>
                    <td>@assessment.Assessor</td>
                    <td>@assessment.AssessmentDate?.ToString("yyyy-MM-dd")</td>
                    <td>@assessment.ComplianceScore</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => Edit(assessment.AssessmentID)">@Localizer["Edit"]</button>
                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => Delete(assessment.AssessmentID)">@Localizer["Delete"]</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (editing != null)
{
    <div class="card mt-4">
        <div class="card-header">@Localizer[editing.AssessmentID.HasValue ? "EditAssessment" : "AddAssessment"]</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ScopeCriteria"]</label>
                    <input class="form-control" @bind="editing.ScopeCriteria" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Assessor"]</label>
                    <input class="form-control" @bind="editing.Assessor" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Localizer["AssessmentDate"]</label>
                    <input type="date" class="form-control" @bind="editing.AssessmentDate" @bind:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Localizer["ComplianceScore"]</label>
                    <input type="number" step="0.01" class="form-control" @bind="editing.ComplianceScore" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Localizer["FindingsCount"]</label>
                    <input type="number" class="form-control" @bind="editing.FindingsCount" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Findings"]</label>
                    <textarea class="form-control" @bind="editing.Findings"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ActionPlanReference"]</label>
                    <input class="form-control" @bind="editing.ActionPlanReference" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["NextAssessmentDue"]</label>
                    <input type="date" class="form-control" @bind="editing.NextAssessmentDue" @bind:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Status"]</label>
                    <input class="form-control" @bind="editing.Status" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RelatedObligations"]</label>
                    <textarea class="form-control" @bind="editing.RelatedObligations"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RelatedControls"]</label>
                    <textarea class="form-control" @bind="editing.RelatedControls"></textarea>
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
                <button class="btn btn-secondary ms-2" @onclick="Cancel">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject] public Microsoft.Extensions.Localization.IStringLocalizer<ComplianceAssessments> Localizer { get; set; }

    private List<ComplianceAssessment> assessments;
    private ComplianceAssessment editing;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        var response = await Http.GetAsync("/api/ComplianceAssessment/Get");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            assessments = System.Text.Json.JsonSerializer.Deserialize<List<ComplianceAssessment>>(json);
        }
    }

    private void CreateNew()
    {
        editing = new ComplianceAssessment();
    }

    private async Task Edit(long? id)
    {
        if (!id.HasValue) return;
        var response = await Http.GetAsync($"/api/ComplianceAssessment/GetOne?assessmentId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            var items = System.Text.Json.JsonSerializer.Deserialize<List<ComplianceAssessment>>(json);
            editing = items.FirstOrDefault();
        }
    }

    private async Task Save()
    {
        if (editing is null) return;
        var response = await Http.PostAsJsonAsync("/api/ComplianceAssessment/Save", editing);
        if (response.IsSuccessStatusCode)
        {
            editing = null;
            await LoadData();
        }
    }

    private void Cancel()
    {
        editing = null;
    }

    private async Task Delete(long? id)
    {
        if (!id.HasValue) return;
        var response = await Http.DeleteAsync($"/api/ComplianceAssessment/Delete?assessmentId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            await LoadData();
        }
    }
}
