@page "/GRC/AuditUniverse"
@using System.Net.Http.Json
@using EBSCore.Web.Models.GRC
@inject HttpClient Http

<h3>@Localizer["AuditUniverse"]</h3>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="CreateNew">@Localizer["AddNew"]</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["EntityProcessName"]</th>
            <th>@Localizer["EntityOwner"]</th>
            <th>@Localizer["RiskRating"]</th>
            <th>@Localizer["NextAuditDue"]</th>
            <th>@Localizer["AuditFrequency"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (records is null)
        {
            <tr><td colspan="6">@Localizer["Loading"]</td></tr>
        }
        else if (!records.Any())
        {
            <tr><td colspan="6">@Localizer["NoData"]</td></tr>
        }
        else
        {
            @foreach (var item in records)
            {
                <tr>
                    <td>@item.EntityProcessName</td>
                    <td>@item.EntityOwner</td>
                    <td>@item.RiskRating</td>
                    <td>@item.NextAuditDue?.ToString("yyyy-MM-dd")</td>
                    <td>@item.AuditFrequency</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => Edit(item.EntityProcessID)">@Localizer["Edit"]</button>
                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => Delete(item.EntityProcessID)">@Localizer["Delete"]</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (editing != null)
{
    <div class="card mt-4">
        <div class="card-header">@Localizer[editing.EntityProcessID.HasValue ? "EditAuditUniverse" : "AddAuditUniverse"]</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["EntityProcessName"]</label>
                    <input class="form-control" @bind="editing.EntityProcessName" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["EntityOwner"]</label>
                    <input class="form-control" @bind="editing.EntityOwner" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RiskRating"]</label>
                    <input class="form-control" @bind="editing.RiskRating" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["AuditPriority"]</label>
                    <input class="form-control" @bind="editing.AuditPriority" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["AuditFrequency"]</label>
                    <input class="form-control" @bind="editing.AuditFrequency" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["LastAuditDate"]</label>
                    <input type="date" class="form-control" @bind-value="editing.LastAuditDate" @bind-value:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["NextAuditDue"]</label>
                    <input type="date" class="form-control" @bind-value="editing.NextAuditDue" @bind-value:format="yyyy-MM-dd" />
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
                <button class="btn btn-secondary ms-2" @onclick="Cancel">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
}

@code {
    private List<AuditUniverse> records;
    private AuditUniverse editing;

    protected override async Task OnInitializedAsync()
    {
        records = await Http.GetFromJsonAsync<List<AuditUniverse>>("/api/AuditUniverse/Get");
    }

    private void CreateNew()
    {
        editing = new AuditUniverse();
    }

    private async Task Edit(long? id)
    {
        var result = await Http.GetFromJsonAsync<List<AuditUniverse>>($"/api/AuditUniverse/GetOne?entityProcessId={id}");
        editing = result?.FirstOrDefault();
    }

    private async Task Delete(long? id)
    {
        await Http.DeleteAsync($"/api/AuditUniverse/Delete?entityProcessId={id}");
        records = await Http.GetFromJsonAsync<List<AuditUniverse>>("/api/AuditUniverse/Get");
    }

    private async Task Save()
    {
        await Http.PostAsJsonAsync("/api/AuditUniverse/Save", editing);
        records = await Http.GetFromJsonAsync<List<AuditUniverse>>("/api/AuditUniverse/Get");
        editing = null;
    }

    private void Cancel()
    {
        editing = null;
    }
}
