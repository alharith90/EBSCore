@page "/GRC/InformationSystems"
@using System.Collections.Generic
@using System.Linq
@using System.Net.Http.Json
@using EBSCore.Web.Models.GRC
@inject HttpClient Http

<h3>@Localizer["InformationSystems"]</h3>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="CreateNew">@Localizer["AddNew"]</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["SystemName"]</th>
            <th>@Localizer["RPO"]</th>
            <th>@Localizer["Type"]</th>
            <th>@Localizer["BusinessOwner"]</th>
            <th>@Localizer["NumberOfUsers"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (systems is null)
        {
            <tr><td colspan="6">@Localizer["Loading"]</td></tr>
        }
        else if (!systems.Any())
        {
            <tr><td colspan="6">@Localizer["NoData"]</td></tr>
        }
        else
        {
            @foreach (var system in systems)
            {
                <tr>
                    <td>@system.SystemName</td>
                    <td>@system.RPO</td>
                    <td>@system.Type</td>
                    <td>@system.BusinessOwner</td>
                    <td>@system.NumberOfUsers</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => Edit(system.SystemID)">@Localizer["Edit"]</button>
                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => Delete(system.SystemID)">@Localizer["Delete"]</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (editing != null)
{
    <div class="card mt-4">
        <div class="card-header">@Localizer[editing.SystemID.HasValue ? "EditSystem" : "AddSystem"]</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["SystemName"]</label>
                    <input class="form-control" @bind="editing.SystemName" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RPO"]</label>
                    <input class="form-control" @bind="editing.RPO" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["ApplicationLifecycleStatus"]</label>
                    <input class="form-control" @bind="editing.ApplicationLifecycleStatus" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Type"]</label>
                    <input class="form-control" @bind="editing.Type" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RequiredFor"]</label>
                    <input class="form-control" @bind="editing.RequiredFor" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["SystemDescription"]</label>
                    <textarea class="form-control" @bind="editing.SystemDescription"></textarea>
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Localizer["PrimaryOwnerId"]</label>
                    <input class="form-control" @bind="editing.PrimaryOwnerId" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Localizer["SecondaryOwner"]</label>
                    <input class="form-control" @bind="editing.SecondaryOwner" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Localizer["BusinessOwner"]</label>
                    <input class="form-control" @bind="editing.BusinessOwner" />
                </div>
                <div class="col-md-4 form-check mt-4">
                    <input class="form-check-input" type="checkbox" @bind="editing.InternetFacing" />
                    <label class="form-check-label">@Localizer["InternetFacing"]</label>
                </div>
                <div class="col-md-4 form-check mt-4">
                    <input class="form-check-input" type="checkbox" @bind="editing.ThirdPartyAccess" />
                    <label class="form-check-label">@Localizer["ThirdPartyAccess"]</label>
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Localizer["NumberOfUsers"]</label>
                    <input class="form-control" @bind="editing.NumberOfUsers" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["LicenseType"]</label>
                    <input class="form-control" @bind="editing.LicenseType" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Infrastructure"]</label>
                    <input class="form-control" @bind="editing.Infrastructure" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["MFAEnabled"]</label>
                    <input class="form-control" @bind="editing.MFAEnabled" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["MFAStatusDetails"]</label>
                    <textarea class="form-control" @bind="editing.MFAStatusDetails"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["AssociatedInformationSystems"]</label>
                    <textarea class="form-control" @bind="editing.AssociatedInformationSystems"></textarea>
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Localizer["Confidentiality"]</label>
                    <input class="form-control" @bind="editing.Confidentiality" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Localizer["Integrity"]</label>
                    <input class="form-control" @bind="editing.Integrity" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Localizer["Availability"]</label>
                    <input class="form-control" @bind="editing.Availability" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["OverallCategorizationRating"]</label>
                    <input class="form-control" @bind="editing.OverallCategorizationRating" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["HighestInformationClassification"]</label>
                    <input class="form-control" @bind="editing.HighestInformationClassification" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["RiskHighlightedByIT"]</label>
                    <textarea class="form-control" @bind="editing.RiskHighlightedByIT"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["AdditionalNote"]</label>
                    <textarea class="form-control" @bind="editing.AdditionalNote"></textarea>
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success" @onclick="Save">@Localizer["Save"]</button>
                <button class="btn btn-secondary ms-2" @onclick="Cancel">@Localizer["Cancel"]</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject] public Microsoft.Extensions.Localization.IStringLocalizer<InformationSystems> Localizer { get; set; }

    private List<InformationSystem> systems;
    private InformationSystem editing;

    protected override async Task OnInitializedAsync()
    {
        await LoadSystems();
    }

    private async Task LoadSystems()
    {
        var response = await Http.GetAsync("/api/InformationSystemGRC/Get");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            var wrapped = System.Text.Json.JsonSerializer.Deserialize<Wrapper>(json);
            systems = wrapped?.Data ?? new List<InformationSystem>();
        }
    }

    private void CreateNew()
    {
        editing = new InformationSystem();
    }

    private async Task Edit(int? id)
    {
        if (!id.HasValue) return;
        var response = await Http.GetAsync($"/api/InformationSystemGRC/GetOne?systemId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            var json = await response.Content.ReadFromJsonAsync<string>();
            var items = System.Text.Json.JsonSerializer.Deserialize<List<InformationSystem>>(json);
            if (items?.Count > 0)
            {
                editing = items[0];
            }
        }
    }

    private async Task Save()
    {
        if (editing == null) return;
        var response = await Http.PostAsJsonAsync("/api/InformationSystemGRC/Save", editing);
        if (response.IsSuccessStatusCode)
        {
            editing = null;
            await LoadSystems();
        }
    }

    private void Cancel()
    {
        editing = null;
    }

    private async Task Delete(int? id)
    {
        if (!id.HasValue) return;
        var response = await Http.DeleteAsync($"/api/InformationSystemGRC/Delete?systemId={id.Value}");
        if (response.IsSuccessStatusCode)
        {
            await LoadSystems();
        }
    }

    private class Wrapper
    {
        public List<InformationSystem> Data { get; set; }
        public int PageCount { get; set; }
    }
}
