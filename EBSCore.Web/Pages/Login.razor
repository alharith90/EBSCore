@page "/login"
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.Extensions.Localization
@using Microsoft.JSInterop
@using EBSCore.Web.Models.Security
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IStringLocalizerFactory LocalizerFactory
@inject IJSRuntime JS

<div class="wrapper">
    <div class="section-authentication-cover">
        <div class="">
            <div class="row g-0">
                <div class="col-12 col-xl-7 col-xxl-8 auth-cover-left align-items-center justify-content-center d-none d-xl-flex">
                    <div class="card shadow-none bg-transparent shadow-none rounded-0 mb-0">
                        <div class="card-body">
                            <img src="assets/images/login-images/login-cover.svg" class="img-fluid auth-img-cover-login" width="650" alt="" />
                        </div>
                    </div>
                </div>
                <div class="col-12 col-xl-5 col-xxl-4 auth-cover-right align-items-center justify-content-center">
                    <div class="card rounded-0 m-3 shadow-none bg-transparent mb-0">
                        <div class="card-body p-sm-5">
                            <div class="">
                                <div class="mb-3 text-center">
                                    <img src="assets/images/logo-icon.png" width="60" alt="">
                                </div>
                                <div class="text-center mb-4">
                                    <h5 class="">@Localizer["Login"]</h5>
                                    <p class="mb-0">@Localizer["LoginSubtitle"]</p>
                                </div>
                                <div class="form-body">
                                    <EditForm Model="loginModel" OnValidSubmit="DoLogin" class="row g-3">
                                        <DataAnnotationsValidator />
                                        <ValidationSummary />
                                        @if (!string.IsNullOrEmpty(error))
                                        {
                                            <div class="col-12">
                                                <div class="alert alert-danger" role="alert">@error</div>
                                            </div>
                                        }
                                        <div class="col-12">
                                            <label for="inputUserName" class="form-label">@Localizer["UserName"]</label>
                                            <InputText class="form-control" id="inputUserName" @bind-Value="loginModel.UserName" placeholder="user@example.com" />
                                        </div>
                                        <div class="col-12">
                                            <label for="inputChoosePassword" class="form-label">@Localizer["Password"]</label>
                                            <div class="input-group" id="show_hide_password">
                                                <InputText type="password" class="form-control border-end-0" id="inputChoosePassword" @bind-Value="loginModel.Password" placeholder="********" />
                                                <a href="javascript:;" class="input-group-text bg-transparent" @onclick="TogglePassword">
                                                    <i class="bx bx-hide"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-check form-switch">
                                                <InputCheckbox class="form-check-input" id="flexSwitchCheckChecked" @bind-Value="loginModel.KeepMeSignedIn" />
                                                <label class="form-check-label" for="flexSwitchCheckChecked">@Localizer["KeepMeSignedIn"]</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 text-end">
                                            <a href="/reset-password">@Localizer["ForgotPassword"]</a>
                                        </div>
                                        <div class="col-12">
                                            <div class="d-grid">
                                                <button type="submit" class="btn btn-primary">@Localizer["Login"]</button>
                                            </div>
                                        </div>
                                    </EditForm>
                                </div>
                                <div class="login-separater text-center mb-5">
                                    <span>@Localizer["OrSignInWith"]</span>
                                    <hr>
                                </div>
                                <div class="list-inline contacts-social text-center">
                                    <a href="javascript:;" class="list-inline-item bg-facebook text-white border-0 rounded-3"><i class="bx bxl-facebook"></i></a>
                                    <a href="javascript:;" class="list-inline-item bg-twitter text-white border-0 rounded-3"><i class="bx bxl-twitter"></i></a>
                                    <a href="javascript:;" class="list-inline-item bg-google text-white border-0 rounded-3"><i class="bx bxl-google"></i></a>
                                    <a href="javascript:;" class="list-inline-item bg-linkedin text-white border-0 rounded-3"><i class="bx bxl-linkedin"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private IStringLocalizer Localizer;
    private LoginRequest loginModel = new();
    private string error = string.Empty;
    private bool showPassword;

    protected override void OnInitialized()
    {
        Localizer = LocalizerFactory.Create(new Uri(Navigation.Uri).AbsolutePath, "");
    }

    private async Task DoLogin()
    {
        try
        {
            error = string.Empty;
            var response = await Http.PostAsJsonAsync("/api/CurrentUser/Login", loginModel);
            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("Swal.fire", new { icon = "success", title = Localizer["Login"].Value, text = Localizer["LoginSuccess"].Value });
                Navigation.NavigateTo("/", true);
            }
            else
            {
                var message = await response.Content.ReadAsStringAsync();
                error = string.IsNullOrWhiteSpace(message) ? Localizer["InvalidCredentials"].Value : message;
                await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = Localizer["InvalidCredentials"].Value, text = error });
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;
            await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = Localizer["Error"].Value, text = error });
        }
    }

    private Task TogglePassword()
    {
        showPassword = !showPassword;
        var inputType = showPassword ? "text" : "password";
        return JS.InvokeVoidAsync("eval", $"document.getElementById('inputChoosePassword').setAttribute('type','{inputType}')").AsTask();
    }
}
