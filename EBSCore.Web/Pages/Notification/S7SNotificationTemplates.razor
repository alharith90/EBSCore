@page "/Notification/Templates"
@using EBSCore.Web.Models
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.Extensions.Localization
@using Microsoft.JSInterop
@using Newtonsoft.Json
@using EBSCore.Web.Services
@using Microsoft.AspNetCore.Components.Web
@using System.Net.Http.Json
@using System.Linq
@using EBSCore.Web.Pages.Controls
@inject IJSRuntime JS
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IStringLocalizerFactory LocalizerFactory
@inject PageTitleService PageTitleService

@if (!ShowInputScreen)
{
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <div class="card-tools w-100 d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">@Localizer["PageTitle"]</h5>

                        <button class="btn btn-success" @onclick="ShowInput">
                            <i class="fas fa-plus"></i>&nbsp; @GLocalizer["AddRecord"]
                        </button>
                    </div>
                </div>

                <div class="card-body">
                    @if (Templates.Any())
                    {
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>@Localizer["Name"]</th>
                                    <th>@Localizer["TemplateKey"]</th>
                                    <th>@Localizer["Channel"]</th>
                                    <th>@Localizer["Subject"]</th>
                                    <th>@Localizer["Active"]</th>
                                    <th>@GLocalizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var idx = 0;
                                }
                                @foreach (var t in Templates)
                                {
                                    idx++;
                                    <tr>
                                        <td>@idx</td>
                                        <td>@t.Name</td>
                                        <td>@t.TemplateKey</td>
                                        <td>@t.ChannelID</td>
                                        <td>@t.Subject</td>
                                        <td>
                                            @if (t.IsActive)
                                            {
                                                <span class="badge bg-success">@Localizer["Active"]</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@Localizer["Inactive"]</span>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-info"
                                                    @onclick="() => EditTemplate(t)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>@GLocalizer["EmptyTable"]</p>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="linear">
        <EditForm EditContext="EditContext" OnValidSubmit="SaveTemplateAsync">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">@Localizer["EditTemplate"]</h5>
                </div>

                <div class="card-body">
                    <DataAnnotationsValidator />

                    @if (ShowValidationMessage)
                    {
                        <ValidationSummary />
                    }

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["Name"]</label>
                            <input class="form-control"
                                   @bind-value="CurrentTemplate.Name"
                                   @bind-value:event="oninput" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">@Localizer["TemplateKey"]</label>
                            <input class="form-control"
                                   @bind-value="CurrentTemplate.TemplateKey"
                                   @bind-value:event="oninput" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">@Localizer["Channel"]</label>
                            <input class="form-control"
                                   type="number"
                                   @bind-value="CurrentTemplate.ChannelID"
                                   @bind-value:event="oninput" />
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">@Localizer["Subject"]</label>
                            <input class="form-control"
                                   @bind-value="CurrentTemplate.Subject"
                                   @bind-value:event="oninput" />
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">@Localizer["Body"]</label>
                            <textarea class="form-control"
                                      rows="5"
                                      @bind-value="CurrentTemplate.Body"
                                      @bind-value:event="oninput"></textarea>
                        </div>

                        <div class="col-md-12">
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       @bind="CurrentTemplate.UseDesign" />
                                <label class="form-check-label">@Localizer["UseDesign"]</label>
                            </div>

                            <div class="form-check mt-2">
                                <input class="form-check-input"
                                       type="checkbox"
                                       @bind="CurrentTemplate.IsActive" />
                                <label class="form-check-label">@Localizer["Active"]</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-5">
                        <i class="fas fa-save"></i>&nbsp;@GLocalizer["Save"]
                    </button>

                    <button type="button"
                            @onclick="ShowDisplay"
                            class="btn btn-light btn-outline-dark">
                        <i class="fas fa-arrow-circle-left"></i>&nbsp;@GLocalizer["Cancel"]
                    </button>
                </div>
            </div>
        </EditForm>
    </div>
}

@code {
    // UI
    bool ShowInputScreen = false;
    bool ShowValidationMessage = false;

    // Data
    List<S7SNotificationTemplate> Templates = new();
    S7SNotificationTemplate CurrentTemplate = new();

    // Form
    EditContext EditContext = default!;

    // Localization
    IStringLocalizer Localizer = default!;
    IStringLocalizer GLocalizer = default!;

    protected override async Task OnInitializedAsync()
    {
        Localizer = LocalizerFactory.Create(new Uri(Navigation.Uri).AbsolutePath, "");
        GLocalizer = LocalizerFactory.Create("Common", "");
        PageTitleService.CurrentPageTitle = Localizer["PageTitle"];

        await LoadTemplates();
    }

    private async Task LoadTemplates()
    {
        var json = await Http.GetStringAsync("api/S7SNotification/RtvTemplates");
        Templates = JsonConvert.DeserializeObject<List<S7SNotificationTemplate>>(json) ?? new();
    }

    private void ShowInput()
    {
        CurrentTemplate = new S7SNotificationTemplate { IsActive = true, UseDesign = true, ChannelID = 1 };
        EditContext = new EditContext(CurrentTemplate);
        ShowInputScreen = true;
        ShowValidationMessage = false;
    }

    private void ShowDisplay()
    {
        ShowInputScreen = false;
    }

    private void EditTemplate(S7SNotificationTemplate t)
    {
        CurrentTemplate = new S7SNotificationTemplate
        {
            NotificationTemplateID = t.NotificationTemplateID,
            Name = t.Name,
            TemplateKey = t.TemplateKey,
            ChannelID = t.ChannelID,
            Subject = t.Subject,
            Body = t.Body,
            UseDesign = t.UseDesign,
            IsActive = t.IsActive
        };

        EditContext = new EditContext(CurrentTemplate);
        ShowInputScreen = true;
    }

    private async Task SaveTemplateAsync()
    {
        if (EditContext.Validate())
        {
            await Http.PostAsJsonAsync("api/S7SNotification/SaveTemplate", CurrentTemplate);
            await LoadTemplates();
            ShowDisplay();
        }
        else
        {
            ShowValidationMessage = true;
        }
    }
}
