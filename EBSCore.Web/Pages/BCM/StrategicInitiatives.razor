@using Microsoft.AspNetCore.Components.Web
@page "/BCM/StrategicInitiatives"
@using EBSCore.Web.Models.BCM
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.Extensions.Localization
@using Microsoft.JSInterop
@using Newtonsoft.Json
@using System.Linq
@using System.Net.Http.Json
@using EBSCore.Web.Services
@using EBSCore.Web.Pages.Controls
@inject IJSRuntime JS
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IStringLocalizerFactory LocalizerFactory
@inject PageTitleService PageTitleService

@if (!ShowInputScreen)
{
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <div class="card-tools w-100 d-flex align-items-center gap-2">
                        <div class="d-flex align-items-center flex-grow-1">
                            <label class="form-label me-2 mb-0">@Localizer["UnitName"]</label>
                            <UnitTreeSelector @bind-Value="SelectedUnitID" OnValueChanged="@(_ => ApplySearch())" />
                            <button class="btn btn-outline-dark ms-2" @onclick="ApplySearch"><i class="fas fa-search"></i> @GLocalizer["Search"]</button>
                        </div>
                        <button type="button" class="btn btn-success ms-2" @onclick="ShowInput">
                            <i class="fas fa-plus"></i>&nbsp; @GLocalizer["AddRecord"]
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (ListInitiatives.Any())
                    {
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>@Localizer["Title"]</th>
                                    <th>@Localizer["ObjectiveID"]</th>
                                    <th>@Localizer["OwnerID"]</th>
                                    <th>@Localizer["Progress"]</th>
                                    <th>@Localizer["Status"]</th>
                                    <th>@GLocalizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var idx = 0; }
                                @foreach (var initiative in ListInitiatives)
                                {
                                    idx++;
                                    <tr>
                                        <td>@idx</td>
                                        <td>@initiative.Title</td>
                                        <td>@initiative.ObjectiveID</td>
                                        <td>@initiative.OwnerID</td>
                                        <td>@(initiative.Progress.HasValue ? $"{initiative.Progress}%" : "-")</td>
                                        <td>@initiative.Status</td>
                                        <td>
                                            <button class="btn btn-sm btn-info" @onclick="() => EditInitiative(initiative)"><i class="fas fa-edit"></i></button>
                                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteInitiative(initiative)"><i class="fas fa-trash"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>@GLocalizer["EmptyTable"]</p>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="linear">
        <EditForm EditContext="EditContext" OnValidSubmit="SaveInitiativeAsync">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">@Localizer["ModalTitle"]</h5>
                </div>
                <div class="card-body">
                    <DataAnnotationsValidator />
                    @if (ShowValidationMessage)
                    {
                        <ValidationSummary />
                    }
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">@Localizer["UnitName"]</label>
                            <UnitTreeSelector @bind-Value="CurrentInitiative.UnitID" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">@Localizer["ObjectiveID"]</label>
                            <input class="form-control" @bind="CurrentInitiative.ObjectiveID" @bind:event="oninput" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">@Localizer["Title"]</label>
                            <input class="form-control" @bind="CurrentInitiative.Title" @bind:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["OwnerID"]</label>
                            <input class="form-control" @bind="CurrentInitiative.OwnerID" @bind:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["DepartmentID"]</label>
                            <input class="form-control" @bind="CurrentInitiative.DepartmentID" @bind:event="oninput" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">@Localizer["Budget"]</label>
                            <input type="number" step="0.01" class="form-control" @bind="CurrentInitiative.Budget" @bind:event="oninput" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">@Localizer["Progress"]</label>
                            <input type="number" min="0" max="100" class="form-control" @bind="CurrentInitiative.Progress" @bind:event="oninput" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">@Localizer["Status"]</label>
                            <input class="form-control" @bind="CurrentInitiative.Status" @bind:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["StartDate"]</label>
                            <input type="date" class="form-control" @bind-value="CurrentInitiative.StartDate" @bind-value:format="yyyy-MM-dd" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["EndDate"]</label>
                            <input type="date" class="form-control" @bind-value="CurrentInitiative.EndDate" @bind-value:format="yyyy-MM-dd" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">@Localizer["Description"]</label>
                            <textarea class="form-control" rows="3" @bind="CurrentInitiative.Description" @bind:event="oninput"></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label">@Localizer["EscalationCriteria"]</label>
                            <textarea class="form-control" rows="2" @bind="CurrentInitiative.EscalationCriteria" @bind:event="oninput"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["EscalationContact"]</label>
                            <input class="form-control" @bind="CurrentInitiative.EscalationContact" @bind:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["ActivationStatus"]</label>
                            <input class="form-control" @bind="CurrentInitiative.ActivationStatus" @bind:event="oninput" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">@Localizer["ActivationCriteria"]</label>
                            <textarea class="form-control" rows="2" @bind="CurrentInitiative.ActivationCriteria" @bind:event="oninput"></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label">@Localizer["ActivationTrigger"]</label>
                            <textarea class="form-control" rows="2" @bind="CurrentInitiative.ActivationTrigger" @bind:event="oninput"></textarea>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-5"><i class="fas fa-save"></i> &nbsp;@GLocalizer["Save"]</button>
                    <button type="button" @onclick="ShowDisplay" class="btn btn-light btn-outline-dark"><i class="fas fa-arrow-circle-left"></i> &nbsp;@GLocalizer["Cancel"]</button>
                </div>
            </div>
        </EditForm>
    </div>
}

@code {
    bool ShowInputScreen = false;
    bool ShowValidationMessage = false;

    List<StrategicInitiative> ListInitiatives = new();
    StrategicInitiative CurrentInitiative = new();
    string? SelectedUnitID = null;

    EditContext EditContext = default!;

    IStringLocalizer Localizer = default!;
    IStringLocalizer GLocalizer = default!;

    private bool _firstRenderDone = false;
    protected override async Task OnInitializedAsync()
    {
        EditContext = new EditContext(CurrentInitiative);
        Localizer = LocalizerFactory.Create(new Uri(Navigation.Uri).AbsolutePath, "");
        GLocalizer = LocalizerFactory.Create("Common", "");
        PageTitleService.CurrentPageTitle = Localizer["PageTitle"];
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _firstRenderDone = true;
            await LoadInitiativesAsync();
            StateHasChanged();
        }
    }

    private async Task ApplySearch()
    {
        await LoadInitiativesAsync();
    }

    private async Task LoadInitiativesAsync()
    {
        try
        {
            string response;
            if (!string.IsNullOrEmpty(SelectedUnitID))
            {
                response = await Http.GetStringAsync($"api/StrategicInitiative/Get?UnitID={SelectedUnitID}");
            }
            else
            {
                response = await Http.GetStringAsync("api/StrategicInitiative/Get");
            }
            ListInitiatives = JsonConvert.DeserializeObject<List<StrategicInitiative>>(response) ?? new();
        }
        catch (Exception ex)
        {
            if (_firstRenderDone)
            {
                await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Load Failed", text = ex.Message });
            }
        }
        StateHasChanged();
    }

    private async Task ShowInput()
    {
        CurrentInitiative = new StrategicInitiative { UnitID = SelectedUnitID };
        EditContext = new EditContext(CurrentInitiative);
        ShowValidationMessage = false;
        ShowInputScreen = true;
    }

    private async Task ShowDisplay()
    {
        ShowInputScreen = false;
    }

    private async Task SaveInitiativeAsync()
    {
        if (EditContext.Validate())
        {
            var response = await Http.PostAsJsonAsync("api/StrategicInitiative/Save", CurrentInitiative);
            if (response.IsSuccessStatusCode)
            {
                await ShowDisplay();
                await LoadInitiativesAsync();
                await JS.InvokeVoidAsync("Toast.fire", new { icon = "success", title = Localizer["SaveSuccess"] });
            }
            else
            {
                await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Error!", text = response.ReasonPhrase ?? "Something went wrong" });
            }
        }
        else
        {
            ShowValidationMessage = true;
        }
    }

    private async Task EditInitiative(StrategicInitiative initiative)
    {
        var response = await Http.GetStringAsync($"api/StrategicInitiative/GetOne?initiativeID={initiative.InitiativeID}");
        var data = JsonConvert.DeserializeObject<List<StrategicInitiative>>(response);
        if (data?.Any() == true)
        {
            CurrentInitiative = data.First();
            EditContext = new EditContext(CurrentInitiative);
            ShowInputScreen = true;
        }
    }

    private async Task DeleteInitiative(StrategicInitiative initiative)
    {
        var result = await JS.InvokeAsync<object>("Swal.fire", new
        {
            title = "Are you sure?",
            text = $"Initiative ID {initiative.InitiativeID} will be deleted.",
            icon = "warning",
            showCancelButton = true,
            confirmButtonColor = "#d33",
            cancelButtonColor = "#3085d6",
            confirmButtonText = "Yes, delete it!",
            cancelButtonText = "Cancel"
        });

        var json = result?.ToString();
        if (json != null && json.Contains("\"isConfirmed\":true"))
        {
            var request = new HttpRequestMessage(HttpMethod.Delete, "api/StrategicInitiative/Delete")
            {
                Content = JsonContent.Create(new StrategicInitiative { InitiativeID = initiative.InitiativeID })
            };
            var response = await Http.SendAsync(request);
            if (response.IsSuccessStatusCode)
            {
                await LoadInitiativesAsync();
                await JS.InvokeVoidAsync("Toast.fire", new { icon = "success", title = Localizer["DeleteSuccess"] });
            }
            else
            {
                await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Error!", text = response.ReasonPhrase ?? "Deletion failed" });
            }
        }
    }
}
