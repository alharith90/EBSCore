@page "/reset-password-confirm"
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.Extensions.Localization
@using Microsoft.JSInterop
@using EBSCore.Web.Models.Security
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IStringLocalizerFactory LocalizerFactory
@inject IJSRuntime JS

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h5 class="mb-0">@Localizer["ResetPasswordConfirm"]</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="request" OnValidSubmit="UpdatePassword">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        @if (!string.IsNullOrEmpty(message))
                        {
                            <div class="alert @messageClass" role="alert">@message</div>
                        }
                        <div class="mb-3">
                            <label class="form-label">@Localizer["NewPassword"]</label>
                            <InputText class="form-control" type="password" @bind-Value="request.NewPassword" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">@Localizer["ConfirmNewPassword"]</label>
                            <InputText class="form-control" type="password" @bind-Value="request.ConfirmNewPassword" />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">@Localizer["ResetPassword"]</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private IStringLocalizer Localizer;
    private ResetPasswordConfirmRequest request = new();
    private string message;
    private string messageClass = "alert-info";

    protected override void OnInitialized()
    {
        Localizer = LocalizerFactory.Create(new Uri(Navigation.Uri).AbsolutePath, "");
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("token", out var token))
        {
            if (Guid.TryParse(token, out var parsed))
            {
                request.Token = parsed;
            }
        }
    }

    private async Task UpdatePassword()
    {
        try
        {
            message = string.Empty;
            var response = await Http.PostAsJsonAsync("/api/CurrentUser/ResetPasswordConfirm", request);
            if (response.IsSuccessStatusCode)
            {
                messageClass = "alert-success";
                message = Localizer["PasswordUpdatedSuccessfully"].Value;
                await JS.InvokeVoidAsync("Swal.fire", new { icon = "success", title = Localizer["ResetPassword"].Value, text = message });
                Navigation.NavigateTo("/login", true);
            }
            else
            {
                var content = await response.Content.ReadAsStringAsync();
                messageClass = "alert-danger";
                message = string.IsNullOrWhiteSpace(content) ? Localizer["InvalidOrExpiredToken"].Value : content;
                await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = Localizer["ResetPassword"].Value, text = message });
            }
        }
        catch (Exception ex)
        {
            messageClass = "alert-danger";
            message = ex.Message;
            await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = Localizer["Error"].Value, text = message });
        }
    }
}
