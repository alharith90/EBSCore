@page "/Config/Process"
@using EBSCore.Web.Models
@using ProcModel = EBSCore.Web.Models.Process
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.Extensions.Localization
@using Microsoft.JSInterop
@using Newtonsoft.Json
@using EBSCore.Web.Services
@using Microsoft.AspNetCore.Components.Web
@using System.Net.Http.Json
@using System.Linq
@using EBSCore.Web.Pages.Controls
@using ProcessStepModel = EBSCore.Web.Models.ProcessStep
@inject IJSRuntime JS
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IStringLocalizerFactory LocalizerFactory
@inject PageTitleService PageTitleService

@if (!ShowInputScreen)
{
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <div class="card-tools w-100 d-flex align-items-center gap-2">
                        <div class="d-flex align-items-center flex-grow-1">
                            <label class="form-label me-2 mb-0">@Localizer["UnitName"]</label>
                            <UnitTreeSelector @bind-Value="SelectedUnitID" OnValueChanged="@(_ => ApplySearch())" />
                            <button class="btn btn-outline-dark ms-2" @onclick="ApplySearch"><i class="fas fa-search"></i> @GLocalizer["Search"]</button>
                        </div>
                        <button type="button" class="btn btn-success ms-2" @onclick="ShowInput">
                            <i class="fas fa-plus"></i>&nbsp; @GLocalizer["AddRecord"]
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (ListProcesses.Any())
                    {
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>@Localizer["ProcessName"]</th>
                                    <th>Code</th>
                                    <th>@Localizer["ProcessDescription"]</th>
                                    <th>@GLocalizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var idx = 0;
                                }
                                @foreach (var p in ListProcesses)
                                {
                                    idx++;
                                    <tr>
                                        <td>@idx</td>
                                        <td>@p.ProcessName</td>
                                        <td>@p.ProcessCode</td>
                                        <td>@p.ProcessDescription</td>
                                        <td>
                                            <button class="btn btn-sm btn-info" @onclick="() => EditProcess(p)"><i class="fas fa-edit"></i></button>
                                            <button class="btn btn-sm btn-primary" title="@Localizer["ManageSteps"]" @onclick="() => ManageSteps(p)"><i class="fas fa-shoe-prints"></i></button>
                                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteProcess(p)"><i class="fas fa-trash"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>@GLocalizer["EmptyTable"]</p>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="linear">
        <EditForm EditContext="EditContext" OnValidSubmit="SaveProcessAsync">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">@Localizer["ModalTitle"]</h5>
                </div>
                <div class="card-body">
                    <DataAnnotationsValidator />
                    @if (ShowValidationMessage)
                    {
                        <ValidationSummary />
                    }
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["UnitName"]</label>
                            <UnitTreeSelector @bind-Value="CurrentProcess.UnitID" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@Localizer["ProcessName"]</label>
                            <input class="form-control" @bind-value="CurrentProcess.ProcessName" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Code</label>
                            <input class="form-control" @bind-value="CurrentProcess.ProcessCode" @bind-value:event="oninput" />
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">@Localizer["ProcessDescription"]</label>
                            <textarea class="form-control" rows="3" @bind-value="CurrentProcess.ProcessDescription" @bind-value:event="oninput"></textarea>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">@Localizer["ProcessSteps"]</h6>
                            <button type="button" class="btn btn-outline-primary btn-sm" disabled="@(!CanManageSteps)" @onclick="AddStep">
                                <i class="fas fa-plus"></i> @Localizer["AddStep"]
                            </button>
                        </div>
                        <div class="card-body">
                            @if (!CanManageSteps)
                            {
                                <div class="alert alert-info mb-0">@Localizer["SaveProcessFirst"]</div>
                            }
                            else if (StepsLoading)
                            {
                                <div class="text-muted">@GLocalizer["Loading"]...</div>
                            }
                            else if (CurrentSteps.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-bordered align-middle">
                                        <thead>
                                            <tr>
                                                <th style="width: 80px;">@Localizer["Sequence"]</th>
                                                <th>@Localizer["Title"]</th>
                                                <th>@Localizer["Description"]</th>
                                                <th>@Localizer["Role"]</th>
                                                <th>@Localizer["ExpectedOutput"]</th>
                                                <th>@Localizer["Escalation"]</th>
                                                <th>@Localizer["Activation"]</th>
                                                <th style="width: 80px;">@GLocalizer["Actions"]</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var step in CurrentSteps.OrderBy(s => s.StepOrder))
                                            {
                                                <tr>
                                                    <td>
                                                        <input class="form-control" type="number" min="1" @bind-value="step.StepOrder" @bind-value:event="oninput" />
                                                    </td>
                                                    <td>
                                                        <input class="form-control" @bind-value="step.Title" @bind-value:event="oninput" />
                                                    </td>
                                                    <td>
                                                        <textarea class="form-control" rows="2" @bind-value="step.Description" @bind-value:event="oninput"></textarea>
                                                    </td>
                                                    <td>
                                                        <input class="form-control" @bind-value="step.RoleID" @bind-value:event="oninput" />
                                                    </td>
                                                    <td>
                                                        <textarea class="form-control" rows="2" @bind-value="step.ExpectedOutput" @bind-value:event="oninput"></textarea>
                                                    </td>
                                                    <td>
                                                        <input class="form-control" type="number" min="0" @bind-value="step.EscalationMinutes" @bind-value:event="oninput" />
                                                    </td>
                                                    <td>
                                                        <input class="form-control" @bind-value="step.ActivationCriteria" @bind-value:event="oninput" />
                                                    </td>
                                                    <td class="text-center">
                                                        <button type="button" class="btn btn-outline-danger btn-sm" title="@GLocalizer["Delete"]" @onclick="() => RemoveStep(step)">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mb-0">@Localizer["NoSteps"]</p>
                            }
                        </div>
                        <div class="card-footer text-end">
                            <button type="button" class="btn btn-primary" disabled="@(!CanManageSteps || StepsLoading)" @onclick="SaveStepsAsync">
                                <i class="fas fa-save"></i> @Localizer["SaveSteps"]
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-5"><i class="fas fa-save"></i> &nbsp;@GLocalizer["Save"]</button>
                    <button type="button" @onclick="ShowDisplay" class="btn btn-light btn-outline-dark"><i class="fas fa-arrow-circle-left"></i> &nbsp;@GLocalizer["Cancel"]</button>
                </div>
            </div>
        </EditForm>
    </div>
}

@code {
    // UI state
    bool ShowInputScreen = false;
    bool ShowValidationMessage = false;

    // Data
    List<ProcModel> ListProcesses = new();
    ProcModel CurrentProcess = new();
    string? SelectedUnitID = null;
    List<ProcessStepModel> CurrentSteps = new();
    bool StepsLoading = false;

    // Forms
    EditContext EditContext = default!;

    // Localization
    IStringLocalizer Localizer = default!;
    IStringLocalizer GLocalizer = default!;

    bool CanManageSteps => !string.IsNullOrEmpty(CurrentProcess.ProcessID);

    private bool _firstRenderDone = false;
    protected override async Task OnInitializedAsync()
    {
        EditContext = new EditContext(CurrentProcess);
        Localizer = LocalizerFactory.Create(new Uri(Navigation.Uri).AbsolutePath, "");
        GLocalizer = LocalizerFactory.Create("Common", "");
        PageTitleService.CurrentPageTitle = Localizer["PageTitle"];
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _firstRenderDone = true;
            await LoadProcessListAsync();
            StateHasChanged();
        }
    }

    private async Task ApplySearch()
    {
        await LoadProcessListAsync();
    }

    private async Task LoadProcessListAsync()
    {
        try
        {
            string response;
            if (!string.IsNullOrEmpty(SelectedUnitID))
            {
                response = await Http.GetStringAsync($"api/Process/GetByUnit?UnitID={SelectedUnitID}");
            }
            else
            {
                response = await Http.GetStringAsync("api/Process/Get");
            }
            ListProcesses = JsonConvert.DeserializeObject<List<ProcModel>>(response) ?? new();
        }
        catch (Exception ex)
        {
            if (_firstRenderDone)
            {
                await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Load Failed", text = ex.Message });
            }
        }
        StateHasChanged();
    }

    private async Task ShowInput()
    {
        CurrentProcess = new ProcModel { UnitID = SelectedUnitID };
        EditContext = new EditContext(CurrentProcess);
        ShowValidationMessage = false;
        ShowInputScreen = true;
        CurrentSteps = new();
        StepsLoading = false;
    }

    private async Task ShowDisplay()
    {
        ShowInputScreen = false;
        CurrentSteps = new();
        StepsLoading = false;
    }

    private async Task SaveProcessAsync()
    {
        if (EditContext.Validate())
        {
            var response = await Http.PostAsJsonAsync("api/Process/Save", CurrentProcess);
            if (response.IsSuccessStatusCode)
            {
                await ShowDisplay();
                await LoadProcessListAsync();
                await JS.InvokeVoidAsync("Toast.fire", new { icon = "success", title = "Process saved successfully" });
            }
            else
            {
                await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Error!", text = response.ReasonPhrase ?? "Something went wrong" });
            }
        }
        else
        {
            ShowValidationMessage = true;
        }
    }

    private async Task EditProcess(ProcModel process)
    {
        var response = await Http.GetStringAsync($"api/Process/GetOne?ProcessID={process.ProcessID}");
        var data = JsonConvert.DeserializeObject<List<ProcModel>>(response);
        if (data?.Any() == true)
        {
            CurrentProcess = data.First();
            EditContext = new EditContext(CurrentProcess);
            ShowInputScreen = true;
            await LoadStepsForCurrentProcess();
        }
    }

    private async Task LoadStepsForCurrentProcess()
    {
        CurrentSteps = new();
        if (!CanManageSteps)
        {
            return;
        }

        StepsLoading = true;
        try
        {
            var response = await Http.GetStringAsync($"api/ProcessStep/GetByProcess?processId={CurrentProcess.ProcessID}");
            CurrentSteps = JsonConvert.DeserializeObject<List<ProcessStepModel>>(response) ?? new();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Steps", text = ex.Message });
        }
        finally
        {
            StepsLoading = false;
        }
    }

    private void AddStep()
    {
        if (!CanManageSteps)
        {
            return;
        }

        var nextOrder = CurrentSteps.Any() ? CurrentSteps.Max(s => s.StepOrder) + 1 : 1;
        _ = int.TryParse(CurrentProcess.ProcessID, out var processId);
        CurrentSteps.Add(new ProcessStepModel
        {
            ProcessID = processId,
            StepOrder = nextOrder,
            Title = string.Empty,
            ActivationCriteria = string.Empty
        });
    }

    private void RemoveStep(ProcessStepModel step)
    {
        CurrentSteps.Remove(step);
    }

    private async Task SaveStepsAsync()
    {
        if (!int.TryParse(CurrentProcess.ProcessID, out var processId))
        {
            await JS.InvokeVoidAsync("Swal.fire", new { icon = "info", title = Localizer["SaveProcessFirst"], text = Localizer["SaveProcessFirst"] });
            return;
        }

        var orderedSteps = CurrentSteps
            .OrderBy(s => s.StepOrder)
            .Select((s, idx) =>
            {
                s.ProcessID = processId;
                s.StepOrder = s.StepOrder <= 0 ? idx + 1 : s.StepOrder;
                return s;
            })
            .ToList();

        var response = await Http.PostAsJsonAsync("api/ProcessStep/Save", new ProcessStepSaveRequest
        {
            ProcessID = processId,
            Steps = orderedSteps
        });

        if (response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("Toast.fire", new { icon = "success", title = Localizer["StepsSaved"] });
            await LoadStepsForCurrentProcess();
        }
        else
        {
            await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Error!", text = response.ReasonPhrase ?? "Failed to save steps" });
        }
    }

    private async Task ManageSteps(ProcModel process)
    {
        await EditProcess(process);
    }

    private async Task DeleteProcess(ProcModel process)
    {
        var result = await JS.InvokeAsync<object>("Swal.fire", new
        {
            title = "Are you sure?",
            text = $"Process ID {process.ProcessID} will be deleted.",
            icon = "warning",
            showCancelButton = true,
            confirmButtonColor = "#d33",
            cancelButtonColor = "#3085d6",
            confirmButtonText = "Yes, delete it!",
            cancelButtonText = "Cancel"
        });

        var json = result?.ToString();
        if (json != null && json.Contains("\"isConfirmed\":true"))
        {
            // DELETE with body per controller contract
            var request = new HttpRequestMessage(HttpMethod.Delete, "api/Process/Delete")
            {
                Content = JsonContent.Create(new ProcModel { ProcessID = process.ProcessID })
            };
            var response = await Http.SendAsync(request);
            if (response.IsSuccessStatusCode)
            {
                await LoadProcessListAsync();
                await JS.InvokeVoidAsync("Toast.fire", new { icon = "success", title = "Process deleted successfully" });
            }
            else
            {
                await JS.InvokeVoidAsync("Swal.fire", new { icon = "error", title = "Error!", text = response.ReasonPhrase ?? "Deletion failed" });
            }
        }
    }
}
