@inject HttpClient Http
@code {
    bool ShowInputScreen = false;
    InformationSystem CurrentSystem = new();
    //DataTable dtInformationSystem = new();
    private IStringLocalizer Localizer;
    private IStringLocalizer GLocalizer;

    async Task ShowInput()
    {
        ShowInputScreen = true;
    }
    async Task ShowDisplay()
    {
        ShowInputScreen = false;
        await LoadInformationSystemListAsync(); 
    }

    protected override async Task OnInitializedAsync()
    {
        Localizer = LocalizerFactory.Create(new Uri(Navigation.Uri).AbsolutePath, "");
        GLocalizer = LocalizerFactory.Create("Common", "");
        await ShowDisplay();
    }
    private async Task LoadInformationSystemListAsync()
    {
        try
        {
            var response = await Http.GetStringAsync("api/InformationSystem/Get");
            //dtInformationSystem = JsonConvert.DeserializeObject<DataTable>(response);

            object dtObject = new
            {
                data = response,// dtInformationSystem,
                columns = new[]
                {
                    new { data = "SystemID",        title = "#" },
                    new { data = "SystemName",      title = Localizer["SystemName"].ToString() },
                    new { data = "RPO",             title = Localizer["RPO"].ToString() },
                    new { data = "Type",            title = Localizer["Type"].ToString() },
                    new { data = "BusinessOwner",   title = Localizer["BusinessOwner"].ToString() },
                    new { data = "NumberOfUsers",   title = Localizer["NumberOfUsers"].ToString() },
                    new { data = "MFAEnabled",      title = Localizer["MFAEnabled"].ToString() },
                    new { data = "Availability",    title = Localizer["Availability"].ToString() }
                }
            };

            // Initialize DataTable after data is loaded
            await JS.InvokeVoidAsync("InitializeDataTable", "tblInformationSystem", JsonConvert.SerializeObject(dtObject));

        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading information systems: {ex.Message}");
        }
    }


    private async Task SaveSystemAsync()
    {
        var response = await Http.PostAsJsonAsync("api/InformationSystem/Save", CurrentSystem);
        if (response.IsSuccessStatusCode)
        {
            // Show success Toast notification
            await ShowDisplay();
            await JS.InvokeVoidAsync("Toast.fire", new
            {
                icon = "success",
                title = "Information System Saved Successfully"
            });
         

        }
        else
        {
            await JS.InvokeVoidAsync("Swal.fire", new
            {
                icon = "error",
                title = "Error!",
                text = response.ReasonPhrase ?? "Something went wrong"
            });
        }
    }
